#!/bin/sh

DEBUG=${DEBUG:-$DEBUG_ENTRYPOINT}


## GENERAL
SERVER_HOSTNAME=${SERVER_HOSTNAME:-$HOSTNAME}

## LDAP
LDAP_HOST=${LDAP_HOST:-}
LDAP_PORT=${LDAP_PORT:-}
LDAP_USER=${LDAP_USER:-}
LDAP_PASS=${LDAP_PASS:-}
LDAP_BASE=${LDAP_BASE:-}

## MAIL
SMTP_HOST=${SMTP_HOST:-}
SMTP_PORT=${SMTP_PORT:-}
SMTP_USER=${SMTP_USER:-}
SMTP_PASS=${SMTP_PASS:-}
SMTP_FROM=${SMTP_FROM:-root@$ERVER_HOSTNAME}
SMTP_TLS=${SMTP_TLS:-off}
SMTP_TYPE=${SMTP_TYPE:-noauth}

## LDAP-SSP
LSSP_MAIL_SUPPORT=false
LSSP_ATTR_LOGIN=${LSSP_ATTR_LOGIN:-uid}
LSSP_ATTR_FN=${LSSP_ATTR_FN:-cn}
LSSP_ATTR_MAIL=${LSSP_ATTR_MAIL:-mail}
LSSP_HASH_METHOD=${LSSP_HASH_METHOD:-auto}

